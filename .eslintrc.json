{
    "root": true,
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true
    },
    "globals": {
        "globalThis": false
    },
    "extends": [
        "eslint:recommended"
    ],
    "plugins": ["no-unsanitized"],
    "rules": {
        "no-unsanitized/method": "error",
        "no-unsanitized/property": "error",
        "no-console": 0,
        "no-unused-vars": ["warn", { "vars": "all", "args": "after-used" } ],
        "no-undef": ["warn"],
        "no-proto": ["error"],
        "prefer-arrow-callback": ["warn"],
        "prefer-spread": ["warn"]
    }
}
